<section class="contRegister">

    <form class="formRegister" action="/register" method="POST">
        <input type="text" style="display: none;" name="tam" value="{{tam}}">

        <div class="contData">
            <img src="/img/svg/profile.svg" alt="" id="inputImg">
            <input type="file" id="inputFile" name="file" onchange="handleFiles(this.files)" placeholder="Imagen de Perfil">
            <input type="text" id="inputNombre" name="name" placeholder="Nombre" value="Nombre">
            <input type="number" id="inputCedula" name="cc" placeholder="Cedula">
        </div>

        <div class="contInput">
            {{#each generos}}
            <h2>{{this}}</h2>
            <input class="inputGusto" type="range" name="{{this}}" min="0" max="10" id="range{{this}}" list="datalist">
            {{/each}}

            <datalist id="datalist">
                <option value="0" label="0">
                <option value="1">
                <option value="2">
                <option value="3">
                <option value="4">
                <option value="5" label="5">
                <option value="6">
                <option value="7">
                <option value="8">
                <option value="9">
                <option value="10" label="10">
            </datalist>

            <input type="submit" value="Crear" id="btnRegistrar">
        </div>
    </form>

    <div class="contBtn">
        <a href="../select" class="">Select Profile</a>
        <a href="../" class="">BACK</a>
    </div>

</section>

<script src="/js/register.js"></script>